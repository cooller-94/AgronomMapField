@model GoogleMaps.Models.FieldModel


<div class="row">
    <div class="col-lg-6 general-info">
        <div class="form-group">
            @Html.LabelFor(m => m.FieldTitle):
            @Html.DisplayFor(m => m.FieldTitle)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Area):
            @Html.DisplayFor(m => m.Area)
        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Owner):
            @Html.DisplayFor(m => m.Owner)
        </div>
    </div>
    <div class="col-lg-6 weather">
        <div class="thumbnail">
            <img src="" id="img">
            <div class="caption">
                <h3 id="weather-value"></h3>
                <p id="weather-city"></p>
            </div>
        </div>
    </div>
</div>


