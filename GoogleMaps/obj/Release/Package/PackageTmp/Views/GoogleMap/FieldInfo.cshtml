@model GoogleMaps.Models.FieldModel
@Styles.Render("~/Content/css")
@using (Ajax.BeginForm("AddNewField",new AjaxOptions
{
    HttpMethod = "POST",
    OnSuccess = "GoogleActions.OnSuccesSaveField",
    OnFailure = "GoogleActions.OnFailureSaveField",
}))
{

    <div class="form-horizontal">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.FieldTitle)
                @Html.EditorFor(model => model.FieldTitle, new { htmlAttributes = new { @class = "form-control", plaseholder = "Введите название поля" } })
                @Html.ValidationMessageFor(model => model.FieldTitle, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Area)
                @Html.EditorFor(model => model.Area, new { htmlAttributes = new { @class = "form-control", plaseholder = "Введите площадь поля" } })
                @Html.ValidationMessageFor(model => model.Area, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.Perimeter)
                @Html.EditorFor(model => model.Perimeter, new { htmlAttributes = new { @class = "form-control", plaseholder = "Введите периметр поля" } })
                @Html.ValidationMessageFor(model => model.Perimeter, "", new { @class = "text-danger" })
            </div>
        </div>

        @Html.HiddenFor(p => p.PolygonPoints)

        <div class="modal-footer">
            <button type="submit" class="btn btn-primary btn-block" id="saveMapInfo">Cохранить и перейти к выбору поля</button>
        </div>
    </div>
}