@model IEnumerable<GoogleMaps.Models.JobPlanningModel>

<div class="form-partial">
    @using (Ajax.BeginForm("GetJobPlaning", new AjaxOptions { OnSuccess = "GoogleActions.OnSuccessLoadFromFilter" }))
    {
        <input type="hidden" name="FieldId" class="FieldId" />
        <fieldset class="filter-option">
            <label for="StartYear">Начальнай год</label>
            <select class="dropdown" name="StartYear" id="StartYear" style="width:100px">
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015" selected>2015</option>
                <option value="2016">2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
            </select>
        </fieldset>
        <fieldset class="filter-option">
            <label for="EndYear">Конечный год</label>
            <select class="dropdown" name="EndYear" id="EndDate" style="width:100px">
                <option value="2010">2010</option>
                <option value="2011">2011</option>
                <option value="2012">2012</option>
                <option value="2013">2013</option>
                <option value="2014">2014</option>
                <option value="2015">2015</option>
                <option value="2016" selected>2016</option>
                <option value="2017">2017</option>
                <option value="2018">2018</option>
                <option value="2019">2019</option>
            </select>
        </fieldset>
        <div class="filter-submit">
            <input type="submit" id="filterGo" value="Применить" />
        </div>
    }
</div>

@if (Model.Count() != 0)
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(i => i.Year)</th>
                <th>@Html.DisplayNameFor(i => i.Culture)</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Year)</td>
                    <td>@Html.DisplayFor(modelItem => item.Culture)</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h3>Данных нет</h3>
}


